{#
/**
 * @file
 * Theme override to display a search button input form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 * @see uikit_preprocess_input()
 * @see uikit_blog_preprocess_input()
 *
 * @ingroup uikit_blog_themeable
 */
#}
{%
  set classes = [
    'uk-button',
    'uk-button-link',
    'uk-position-absolute',
    'uk-blog-search-button',
  ]
%}
<button{{ attributes|without('class').addClass(classes) }}>
  <a uk-icon="icon: search"></a>
</button>
{{ children }}
